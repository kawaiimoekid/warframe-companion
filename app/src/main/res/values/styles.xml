<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">?windowBackground</item>

        <item name="tabStyle">@style/BaseTheme.TabLayout</item>
    </style>

    <style name="BaseTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?colorPrimary</item>
    </style>
    
    <style name="DarkTheme" parent="BaseTheme">
        <item name="windowBackground">@color/nord0</item>
        <item name="colorPrimary">@color/nord1</item>
    </style>

    <style name="ImageView">
        <item name="android:tint">?iconColor</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="separatorVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?separatorColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
