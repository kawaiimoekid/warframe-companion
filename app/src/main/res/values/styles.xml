<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="separatorColor">@color/textPrimary</item>
        <item name="imageButtonColor">@color/textPrimary</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="separatorVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?separatorColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="imageButton">
        <item name="android:tint">?imageButtonColor</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:background">?android:windowBackground</item>
    </style>

</resources>
